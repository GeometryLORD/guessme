import random


def tryAgain(number):
    guess = raw_input("-")
    guess = int(guess)
    checkNum(guess, number)

def correct():
    print "You're Correct!\n"
    again = raw_input("Play Again? y/n    ")
    if (again == "y"):
        start()
    elif (again == "n"):
        print "awww okay :("
    else:
        print "Invalid Response"
        
def tooHigh(number):
    print "Too high!\n"
    tryAgain(number)
    
def tooLow(number):
    print "Too low!\n"
    tryAgain(number)
    
def checkNum(guess, number):
    if (guess == number):
        correct()
    elif (guess > number):
        tooHigh(number)
    else:
        tooLow(number)

def start():
    number = (random.randint(0,100))
    guess = raw_input("Try to guess the number I'm thinking of! ")
    guess = int(guess)
    checkNum(guess, number)


start()
